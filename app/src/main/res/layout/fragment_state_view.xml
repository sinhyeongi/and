<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".state_view">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="state"
            android:textSize="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/state_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level  "
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/state_text"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/state_HP_text"
            android:id="@+id/state_Level"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="@+id/state_Level"
            app:layout_constraintLeft_toRightOf="@id/state_Level"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/state_Level_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP  "
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/state_Level"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/state_HP_text"
            android:id="@+id/state_HP"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="@+id/state_HP"
            app:layout_constraintLeft_toRightOf="@id/state_HP"
            app:layout_constraintLeft_toLeftOf="@+id/state_Level_text"
            android:id="@+id/state_HP_text"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>