<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="캐릭터 선택"
       android:gravity="center"
       android:textSize="45dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintVertical_bias="0.2"
       android:id="@+id/title"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cha_f"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:id="@+id/char_f" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cha_m"
        android:id="@+id/char_m"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/char_f"
        app:layout_constraintHorizontal_bias="1.2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        android:id="@+id/btn_cha_f"
        app:layout_constraintTop_toBottomOf="@id/char_f"
        app:layout_constraintRight_toRightOf="@id/char_f"
        app:layout_constraintLeft_toLeftOf="@id/char_f"
        android:layout_marginTop="50dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        android:id="@+id/btn_cha_m"
        app:layout_constraintRight_toRightOf="@id/char_m"
        app:layout_constraintLeft_toLeftOf="@id/char_m"
        app:layout_constraintBottom_toBottomOf="@id/btn_cha_f" />

</androidx.constraintlayout.widget.ConstraintLayout>