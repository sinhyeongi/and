<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 1번 시작 -->
        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            app:layout_constraintTop_toTopOf="@id/raid1_text"
            app:layout_constraintBottom_toBottomOf="@id/raid1_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.2"
            android:id="@+id/raid1_img"
            android:src="@drawable/raid1_boss" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택 화면"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="0.25"
            android:id="@+id/raid1_text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택"
            app:layout_constraintTop_toBottomOf="@id/raid1_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            android:id="@+id/raid1_btn"
            android:onClick="onclick"/>


    <!-- 1번 끝 -->

    <!-- 2번 시작 -->

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        app:layout_constraintTop_toTopOf="@id/raid2_text"
        app:layout_constraintBottom_toBottomOf="@id/raid2_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:id="@+id/raid2_img"
        android:src="@drawable/raid2_boss"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택 화면"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.45"
        android:id="@+id/raid2_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        app:layout_constraintTop_toBottomOf="@id/raid2_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        android:id="@+id/raid2_btn"
        android:onClick="onclick"/>
    <TextView
        android:id="@+id/riad2_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="이전 단계 클리어 필요!"
        android:textColor="@color/purple_500"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@id/raid2_btn"
        app:layout_constraintTop_toTopOf="@id/raid2_text"
        android:translationZ="10dp"/>
    <!-- 2번 끝 -->

    <!-- 3번 시작 -->

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        app:layout_constraintTop_toTopOf="@id/raid3_text"
        app:layout_constraintBottom_toBottomOf="@id/raid3_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        android:id="@+id/raid3_img"
        android:src="@drawable/raid3_boss"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택 화면"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.65"
        android:id="@+id/raid3_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        app:layout_constraintTop_toBottomOf="@id/raid3_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        android:id="@+id/raid3_btn"
        android:onClick="onclick"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/raid3_img"
        app:layout_constraintBottom_toBottomOf="@id/raid3_img"
        android:text="이전 단계 클리어 필요!"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/purple_500"
        android:id="@+id/riad3_click"
        android:translationZ="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="70dp"
        android:text="전체 클리어!"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        android:id="@+id/All_c"/>

    <!-- 3번 끝 -->
</androidx.constraintlayout.widget.ConstraintLayout>