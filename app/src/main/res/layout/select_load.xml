<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/save1_level"
        android:backgroundTint="#00ff0000"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="@+id/save1_money"
        android:id="@+id/btn_save1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/save2_level"
        android:backgroundTint="#00ff0000"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="@+id/save2_money"
        android:id="@+id/btn_save2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/save3_level"
        android:backgroundTint="#00ff0000"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="@+id/save3_money"
        android:id="@+id/btn_save3"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="플레이 정보"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:text="1번"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:text="2번"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num1" />

    <TextView
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:text="3번"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2" />
    //1번
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level :"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="95dp"
        android:id="@+id/save1_level"
        app:layout_constraintRight_toRightOf="@id/save1_money"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="money :"
        app:layout_constraintLeft_toRightOf="@id/num1"
        app:layout_constraintTop_toBottomOf="@id/save1_level"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/save1_money"/>
//2번
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level :"
        app:layout_constraintLeft_toRightOf="@id/num2"
        app:layout_constraintTop_toBottomOf="@+id/save1_money"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="95dp"
        android:id="@+id/save2_level"
        app:layout_constraintRight_toRightOf="@id/save1_money"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="money :"
        app:layout_constraintLeft_toRightOf="@id/num2"
        app:layout_constraintTop_toBottomOf="@id/save2_level"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/save2_money"/>
//3번

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level :"
        app:layout_constraintLeft_toRightOf="@id/num3"
        app:layout_constraintTop_toBottomOf="@+id/save2_money"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="95dp"
        android:id="@+id/save3_level"
        app:layout_constraintRight_toRightOf="@id/save3_money"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="money :"
        app:layout_constraintLeft_toRightOf="@id/num3"
        app:layout_constraintTop_toBottomOf="@id/save3_level"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/save3_money"/>
   //값 불러올곳
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/save1_level"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="95dp"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/level1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/save1_level"
        app:layout_constraintTop_toBottomOf="@+id/level1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/money1"/>
    //2번 값
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/save2_level"
        app:layout_constraintTop_toBottomOf="@+id/money1"
        android:layout_marginTop="95dp"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/level2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/save2_level"
        app:layout_constraintTop_toBottomOf="@+id/level2"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/money2"/>
    //3번 값
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/save3_level"
        app:layout_constraintTop_toBottomOf="@+id/money2"
        android:layout_marginTop="95dp"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/level3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/save3_level"
        app:layout_constraintTop_toBottomOf="@+id/level3"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"

        android:id="@+id/money3"/>

</androidx.constraintlayout.widget.ConstraintLayout>